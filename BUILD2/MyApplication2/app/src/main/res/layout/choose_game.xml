<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseGame">

    <TextView
        android:id="@+id/choose_game_instructions"
        android:text="@string/choose_game_instructions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/game_to_load"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:hint="@string/choose_game_hint"/>

    <Button
        android:id="@+id/test_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/start_loading_game"
        android:textSize="40sp"/>

</LinearLayout>
